<odoo>
    <data>
        <!-- Kanban view -->
        <record id="view_department_kanban" model="ir.ui.view">
            <field name="name">university.department.kanban</field>
            <field name="model">university.department</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="university_id"/>
                    <field name="teacher_count"/>
                    <templates>
                        <t t-name="card" class="d-flex"> 
                            <div class="p-2 me-2">
                                <div><strong><field name="name"/></strong></div>
                                <div><span><t t-esc="record.teacher_count.value"/> Teachers</span></div>
                                <div><span><field name="university_id"/></span></div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Form view -->
        <record id="view_department_form" model="ir.ui.view">
            <field name="name">university.department.form</field>
            <field name="model">university.department</field>
            <field name="arch" type="xml">
                <form string="Department">
                    <sheet>
                        <div name="button_box">
                            <button name="action_view_teachers"
                                    type="object"
                                    invisible="teacher_count == 0"
                                    icon="fa-user">
                                <field name="teacher_count" widget="statinfo"/>
                            </button>
                        </div>
                        <div class="oe_title mb24">
                            <h1>
                                <field name="name" placeholder="e.g. Technology"/>
                            </h1>
                        </div>
                        <group>
                            <field name="university_id"/>
                            <field name="manager_id" invisible="not id" domain="[('department_id', '=', id), ('university_id', '=', university_id)]"/>
                        </group>
                        <notebook colspan="4" invisible="not id">
                            <page string="Teachers" name="teachers" autofocus="autofocus">
                                <field name="teacher_ids" mode="kanban">
                                    <kanban>
                                        <field name="name"/>
                                        <templates>
                                            <t t-name="card" class="flex-row">
                                                <aside class="o_kanban_aside_full">
                                                    <field name="avatar_128" widget="image" class="oe_avatar"/>
                                                </aside>
                                                <main class="p-2">
                                                    <strong><field name="name"/></strong>
                                                </main>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- List view -->
        <record id="view_department_list" model="ir.ui.view">
            <field name="name">university.department.list</field>
            <field name="model">university.department</field>
            <field name="arch" type="xml">
                <list string="Departments" sample="1" multi_edit="1">
                    <field name="name" readonly="1"/>
                    <field name="university_id" readonly="1"/>
                    <field name="manager_id" readonly="1"/>
                </list>
            </field>
        </record>

        <!-- Action to open department default views -->
        <record id="action_department_default_views" model="ir.actions.act_window">
            <field name="name">Departments</field>
            <field name="res_model">university.department</field>
            <field name="view_mode">list,form,kanban</field>
            <field name="view_id" ref="view_department_list"/>
        </record>
    </data>
</odoo>
