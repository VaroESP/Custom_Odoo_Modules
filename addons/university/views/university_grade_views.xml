<odoo>
    <data>
        <!-- Kanban view -->
        <record id="view_grade_kanban" model="ir.ui.view">
            <field name="name">university.grade.kanban</field>
            <field name="model">university.grade</field>
            <field eval="1" name="priority"/>
            <field name="arch" type="xml">
                <kanban>
                    <field name="grade"/>
                    <field name="tuition_id"/>
                    <field name="student_id"/>
                    <templates>
                        <t t-name="card">
                            <div  class="p-2">
                                <div><strong><field name="student_id"/></strong></div>
                                <div><strong><field name="tuition_id"/></strong></div>
                                <div><span><field name="grade"/></span></div>
                                <div><span><field name="exam_date"/></span></div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Form view -->
        <record id="view_grade_form" model="ir.ui.view">
            <field name="name">university.grade.form</field>
            <field name="model">university.grade</field>
            <field name="arch" type="xml">
                <form string="Grades">
                    <sheet>
                        <group>
                            <field name="student_id"/>
                            <field name="tuition_id"/>
                            <field name="grade"/>
                            <field name="exam_date"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- List view -->
        <record id="view_grade_list" model="ir.ui.view">
            <field name="name">university.grade.list</field>
            <field name="model">university.grade</field>
            <field name="arch" type="xml">
                <list string="Grades">
                    <field name="student_id"/>
                    <field name="tuition_id"/>
                    <field name="grade"/>
                    <field name="exam_date"/>
                </list>
            </field>
        </record>

        <!-- Action to open grades views -->
        <record id="action_grade" model="ir.actions.act_window">
            <field name="name">Grades</field>
            <field name="res_model">university.grade</field>
            <field name="view_mode">list,form,kanban</field>
            <field name="view_id" ref="view_grade_list"/>
        </record>
    </data>
</odoo>