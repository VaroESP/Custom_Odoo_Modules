    <!-- Option 2 -->
    <template id="portal_my_home_grade" inherit_id="portal.portal_my_home" customize_show="True">
        <xpath expr="//div[@id='portal_client_category']" position="inside">
            <t groups="base.group_portal" t-call="portal.portal_docs_entry">
                <t t-set="icon" t-value="'/university/static/src/img/grades.png'" />
                <t t-set="title">My Grades</t>
                <t t-set="url" t-value="'/my/grades'" />
                <t t-set="text">Manage your grades</t>
                <t t-set="config_card" t-value="True" />
            </t>
        </xpath>
    </template>

    <!-- Configure all icons of my account -->
    <template id="university_icon_size" inherit_id="portal.portal_docs_entry">
        <xpath expr="//div/img" position="attributes">
            <attribute name="width">48</attribute>
            <attribute name="height">48</attribute>
            <attribute name="style">object-fit: contain;</attribute>
        </xpath>
    </template>
</odoo>