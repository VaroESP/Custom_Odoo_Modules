<odoo>
    <data>
        <!-- Kanban view -->
        <record id="view_student_kanban" model="ir.ui.view">
            <field name="name">university.student.kanban</field>
            <field name="model">university.student</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name" />
                    <field name="tutor_id" />
                    <field name="university_id" />
                    <field name="avatar_128" />
                    <templates>
                        <t t-name="card">
                            <div class="d-flex">
                                <div class="me-2">
                                    <field name="avatar_128" widget="image"
                                        options="{'size': [100, 100]}" />
                                </div>
                                <div class="p-2">
                                    <div>
                                        <strong>
                                            <field name="name" />
                                        </strong>
                                    </div>
                                    <div>
                                        <span>
                                            <field name="tutor_id" />
                                        </span>
                                    </div>
                                    <div>
                                        <span>
                                            <field name="university_id" />
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Form view -->
        <record id="view_student_form" model="ir.ui.view">
            <field name="name">university.student.form</field>
            <field name="model">university.student</field>
            <field name="arch" type="xml">
                <form string="Student">
                    <header>
                        <button name="action_print_pdf" type="object"
                            class="oe_highlight" string="Print"
                            invisible="not id" />
                        <button name="action_send_pdf" string="Send Email"
                            type="object" class="btn-secondary"
                            invisible="not id" />
                    </header>
                    <sheet>
                        <field name="avatar_128" widget="image" class="oe_avatar" />
                        <div name="button_box">
                            <button name="action_view_tuitions"
                                type="object"
                                invisible="tuition_count == 0"
                                icon="fa-id-card">
                                <field name="tuition_count" readonly="1" widget="statinfo" />
                            </button>
                            <button name="action_view_grades"
                                type="object"
                                invisible="grade_count == 0"
                                icon="fa-file">
                                <field name="grade_count" readonly="1" widget="statinfo" />
                            </button>
                        </div>
                        <div class="oe_title mb24">
                            <h1>
                                <field name="name" placeholder="e.g. James Bond" />
                            </h1>
                        </div>
                        <group>
                            <group class="col-6">
                                <group>
                                    <field name="email" string="Email" />
                                </group>
                                <group>
                                    <widget name='toaster_button_student'
                                        button_name="send_report_preview"
                                        title="" invisible="not id" />
                                </group>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="university_id" />
                                <field name="tutor_id" domain="dynamic_tutor_domain" />
                            </group>
                        </group>
                        <notebook colspan="4" invisible="not id">
                            <page string="Tuitions" name="tuitions" autofocus="autofocus">
                                <field name="tuition_ids" mode="kanban">
                                    <kanban>
                                        <field name="name" />
                                        <templates>
                                            <t t-name="card">
                                                <main class="p-2">
                                                    <strong>
                                                        <field name="name" />
                                                    </strong>
                                                    <field name="subject_id" />
                                                    <field name="teacher_id" />
                                                </main>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Address inherit to view_student_form -->
        <record id="view_student_address_form" model="ir.ui.view">
            <field name="name">university.student.address.form</field>
            <field name="model">university.student</field>
            <field name="inherit_id" ref="view_student_form" />
            <field name="arch" type="xml">
                <xpath expr="//sheet//group//group" position="before">
                    <group>
                        <label for="street" string="Address" />
                        <div>
                            <field name="street" placeholder="Street" />
                            <div class="col-6 o_row">
                                <field name="city" placeholder="City" />
                                <field name="state_id" placeholder="State"
                                    options="{'no_open': True, 'no_quick_create': True}"
                                    context="{'default_country_id': country_id}" />
                            </div>
                            <div class="col-6 o_row">
                                <field name="zip" placeholder="Postal Code" />
                                <field name="country_id" placeholder="Country"
                                    class="o_address_country"
                                    options='{"no_open": True, "no_create": True}' />
                            </div>
                        </div>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- List view -->
        <record id="view_student_list" model="ir.ui.view">
            <field name="name">university.student.list</field>
            <field name="model">university.student</field>
            <field name="arch" type="xml">
                <list string="Students">
                    <field name="name" />
                    <field name="tutor_id" />
                    <field name="university_id" />
                </list>
            </field>
        </record>

        <!-- Action to open students default views -->
        <record id="action_student_default_views" model="ir.actions.act_window">
            <field name="name">Students</field>
            <field name="res_model">university.student</field>
            <field name="view_mode">list,form,kanban</field>
            <field name="view_id" ref="view_student_list" />
        </record>
    </data>
</odoo>