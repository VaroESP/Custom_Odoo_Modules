<odoo>
    <data>
        <!-- Kanban view -->
        <record id="view_subject_kanban" model="ir.ui.view">
            <field name="name">university.subject.kanban</field>
            <field name="model">university.subject</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name" />
                    <field name="university_id" />
                    <templates>
                        <t t-name="card">
                            <div class="p-2">
                                <div>
                                    <strong>
                                        <field name="name" />
                                    </strong>
                                </div>
                                <div>
                                    <span>
                                        <field name="university_id" />
                                    </span>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Form view -->
        <record id="view_subject_form" model="ir.ui.view">
            <field name="name">university.subject.form</field>
            <field name="model">university.subject</field>
            <field name="arch" type="xml">
                <form string="Subject">
                    <sheet>
                        <div name="button_box">
                            <button name="action_view_tuitions"
                                type="object"
                                invisible="tuition_count == 0"
                                icon="fa-id-card">
                                <field name="tuition_count" widget="statinfo" />
                            </button>
                            <button name="action_view_teachers"
                                type="object"
                                invisible="teacher_count == 0"
                                icon="fa-user">
                                <field name="teacher_count" widget="statinfo" />
                            </button>
                        </div>
                        <div class="oe_title mb24">
                            <h1>
                                <field name="name" placeholder="e.g. Introduction to programming" />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="university_id" />
                            </group>
                        </group>
                        <notebook colspan="4" invisible="not id">
                            <page string="Teachers" name="teachers" autofocus="autofocus">
                                <field name="teacher_ids" mode="list" domain="[('university_id', '=', university_id)]">
                                    <list>
                                        <field name="name" />
                                        <field name="university_id" />
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- List view -->
        <record id="view_subject_list" model="ir.ui.view">
            <field name="name">university.subject.list</field>
            <field name="model">university.subject</field>
            <field name="arch" type="xml">
                <list string="Subjects" sample="1" multi_edit="1">
                    <field name="name" />
                    <field name="university_id" />
                </list>
            </field>
        </record>

        <!-- Action to open subject default views -->
        <record id="action_subject_default_views" model="ir.actions.act_window">
            <field name="name">Subjects</field>
            <field name="res_model">university.subject</field>
            <field name="view_mode">list,form,kanban</field>
            <field name="view_id" ref="view_subject_list" />
        </record>
    </data>
</odoo>