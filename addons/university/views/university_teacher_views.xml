<odoo>
    <data>
        <!-- Kanban view -->
        <record id="view_teacher_kanban" model="ir.ui.view">
            <field name="name">university.teacher.kanban</field>
            <field name="model">university.teacher</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name" />
                    <field name="university_id" />
                    <field name="department_id" />
                    <field name="avatar_128" />
                    <templates>
                        <t t-name="card">
                            <div class="d-flex">
                                <div class="me-2">
                                    <field name="avatar_128" widget="image"
                                        options="{'size': [100, 100]}" />
                                </div>
                                <div class="p-2">
                                    <div>
                                        <strong>
                                            <field name="name" />
                                        </strong>
                                    </div>
                                    <div>
                                        <span>
                                            <field name="university_id" />
                                        </span>
                                    </div>
                                    <div>
                                        <span>
                                            <field name="department_id" />
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Form view -->
        <record id="view_teacher_form" model="ir.ui.view">
            <field name="name">university.teacher.form</field>
            <field name="model">university.teacher</field>
            <field name="arch" type="xml">
                <form string="Teacher">
                    <sheet>
                        <field name="avatar_128" widget="image" class="oe_avatar" />
                        <div name="button_box">
                            <button name="action_view_students"
                                type="object"
                                invisible="student_count == 0"
                                icon="fa-graduation-cap">
                                <field name="student_count" widget="statinfo" />
                            </button>
                        </div>
                        <div class="oe_title mb24">
                            <h1>
                                <field name="name" placeholder="e.g. James Bond" />
                            </h1>
                        </div>
                        <group>
                            <field name="university_id" />
                            <field name="is_director" invisible="not is_director" />
                            <field name="department_id" domain="dynamic_department_domain" />
                            <field name="is_manager" invisible="not is_manager" />
                        </group>
                        <notebook colspan="4" invisible="not id">
                            <page string="Subjects" name="subjects" autofocus="autofocus">
                                <field name="subject_ids" mode="list" domain="[('university_id', '=', university_id)]">
                                    <list>
                                        <field name="name" />
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- List view -->
        <record id="view_teacher_list" model="ir.ui.view">
            <field name="name">university.teacher.list</field>
            <field name="model">university.teacher</field>
            <field name="arch" type="xml">
                <list string="Teachers">
                    <field name="name" />
                    <field name="university_id" />
                    <field name="is_director" />
                    <field name="department_id" />
                    <field name="is_manager" />
                </list>
            </field>
        </record>

        <!-- Action to open teacher list view -->
        <record id="action_teacher_default_views" model="ir.actions.act_window">
            <field name="name">Teachers</field>
            <field name="res_model">university.teacher</field>
            <field name="view_mode">list,form,kanban</field>
            <field name="view_id" ref="view_teacher_list" />
        </record>
    </data>
</odoo>