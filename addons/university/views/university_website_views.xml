<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Home page template -->
    <template id="university_website_home" name="Home">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty">
                <section class="s_text_block container mt-4">
                    <div class="row">
                        <div class="col-12" style="text-align: center">
                            <h1>Welcome to home page!</h1>
                        </div>
                    </div>
                </section>

                <section class="container mt-4" style="text-align: center">
                    <div class="row">
                        <div class="col-md-6">
                            <h3>Universities</h3>
                            <p>You will be able to see all the information about the universities
                                that collaborate with us.</p>
                        </div>
                        <div class="col-md-6">
                            <h3>Teachers</h3>
                            <p>We have the best professionals in the various subjects that are
                                taught.</p>
                        </div>
                    </div>
                </section>
            </div>
        </t>
    </template>

    <!-- Universities page template -->
    <template id="university_website_universities" name="Universities">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty">
                <section class="s_text_block container mt-4">
                    <div class="row">
                        <div class="col-12" style="text-align: center">
                            <h1>Welcome to universities page!</h1>
                        </div>
                    </div>
                </section>

                <section class="container mt-4" style="text-align: center">
                    <div class="row">
                        <div class="col-12">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th>Image</th>
                                            <th>University Name</th>
                                            <th>Director</th>
                                            <th>Address</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach="universities" t-as="university"
                                            style="cursor: pointer"
                                            t-att-data-href="'/university/' + str(university.id) + '/teachers'"
                                            onclick="window.location.href = this.dataset.href">
                                            <td>
                                                <t t-if="university.avatar_128">
                                                    <img t-att-src="'/web/image/university.university/' + str(university.id) + '/avatar_128'"
                                                        style="width: 75px; height: 75px; object-fit: cover; border-radius: 20%;"/>
                                                </t>
                                            </td>
                                            <td>
                                                <span t-field="university.name" />
                                            </td>
                                            <td>
                                                <t t-if="university.director_id">
                                                    <span t-field="university.director_id" />
                                                </t>
                                            </td>
                                            <td>
                                                <span t-field="university.street"/>
                                                <t t-if="university.city"> ,
                                                    <span t-field="university.city" />
                                                </t>
                                                <t t-if="university.country_id"> ,
                                                    <span t-field="university.country_id" />
                                                </t>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </t>
    </template>

    <!-- Teachers page template -->
    <template id="university_website_teachers" name="Teachers">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty">
                <section class="s_text_block container mt-4">
                    <div class="row">
                        <div style="text-align: center">
                            <h1>Professors of the <span t-field="university.name"/></h1>
                        </div>
                    </div>
                </section>
                <section class="container mt-4" style="text-align: center">
                    <div class="row">
                        <div class="col-12">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th>Image</th>
                                            <th>Teacher Name</th>
                                            <th>Department</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach="teachers" t-as="teacher">
                                            
                                            <td>
                                                <t t-if="teacher.avatar_128">
                                                    <img t-att-src="'/web/image/university.teacher/' + str(teacher.id) + '/avatar_128'"
                                                        style="width: 75px; height: 75px; object-fit: cover; border-radius: 20%;"/>
                                                </t>
                                            </td>
                                            <td>
                                                <t t-if="teacher.name">
                                                    <span t-field="teacher.name"/>
                                                </t>
                                            </td>
                                            <td>
                                                <t t-if="teacher.department_id">
                                                    <span t-field="teacher.department_id.name" />
                                                </t>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </t>
    </template>

    <!-- Grades page template -->
    <template id="university_website_grades" name="Grades">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty">
                <section class="s_text_block container mt-4">
                    <div class="row">
                        <div style="text-align: center">
                            <h1>All grades of <span t-field="student.name"/></h1>
                        </div>
                    </div>
                </section>

                <section class="container mt-4" style="text-align: center">
                    <div class="row">
                        <div class="col-12">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th>Student</th>
                                            <th>Subject</th>
                                            <th>Teacher</th>
                                            <th>University</th>
                                            <th>Grade</th>
                                            <th>Date Exam</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach="grades" t-as="grade">
                                            <td>
                                                <t t-if="student">
                                                    <span t-field="student.name" />
                                                </t>
                                            </td>
                                            <td>
                                                <t t-if="grade.tuition_id">
                                                    <span t-field="grade.tuition_id.subject_id.name" />
                                                </t>
                                            </td>
                                            <td>
                                                <t t-if="grade.tuition_id">
                                                    <span t-field="grade.tuition_id.teacher_id.name" />
                                                </t>
                                            </td>
                                            <td>
                                                <t t-if="grade.tuition_id">
                                                    <span t-field="grade.tuition_id.university_id.name" />
                                                </t>
                                            </td>
                                            <td>
                                                <t t-if="grade">
                                                    <span t-field="grade.grade" />
                                                </t>
                                            </td>
                                            <td>
                                                <t t-if="grade">
                                                    <span t-field="grade.exam_date" />
                                                </t>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </t>
    </template>

</odoo>